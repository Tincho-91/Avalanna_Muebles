<header class="header">

    <div class="header__menu-desplegable">
    <button class="header_boton"><i class="fa-solid fa-bars"></i></button>
        <div class="header__contenido-desplegable">
            <a href="/">Inicio</a>
            <a href="/products">Productos</a>
            <a href="/">Colecciones</a>
            <a href="/">Muebles personalizados</a>
            <a href="/">Muestrario de telas</a>
            <a href="/">Muestrario de mármol</a>
        </div>
        <% if (!locals.user) { %>
        <div class="header__contenido-desplegable header__forms">
            <a href="/users/ingresar">Ingresá</a>
            <a href="/users/registrarme">Creá tu cuenta</a>
        </div>
        <%  } else{ %>
            <div class="header__contenido-desplegable header__forms">
                <a href="/users/profile/<%=user.id%>">Mi cuenta</a>
            </div>
                <%  } %>
    </div>
    
    <div class="header__div-form">
        <form action="" class="input-container">
            <input class="search" type="text" placeholder="Buscar..." id="search">
            <i class="fa-solid fa-magnifying-glass lupa"></i>
        </form>
    </div>

    <img src="/img/Imagotipo.png" alt="logo">
    <div class="iconos">
        <% if (locals.user) { %>
            <a href="/" class="header__div__iconos-user-session" ><%= locals.user.name %></a>
            <% } else { %>
        <a href="/users/ingresar"><i class="fa-regular fa-user"></i></a>
        <%  } %>
        <a href="/products/productCart"><i class="fa-solid fa-cart-shopping"></i></a>
    </div>
    
</header>