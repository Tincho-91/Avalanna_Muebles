<body class="productDetail__body">

<%- include("../partials/header.ejs") %>

 <main class="productDetail__main">
            
        <section class="seccion__productos">
            <img class="detalles img" src="/img/<%= product.image ? product.image : "default.jpg"%>" alt="<%= product.name %>">  
            <div class="precios">
                <div class="seccion__productos--titulo">  
            <h1 class="seccion__productos--titulo"><%= product.name %></h1>
            <% if (product.discount > 0) { %>
            <p class="tachado">$<%= product.price %></p>
            <p class="color">$<%= calc %></p>
            <p class="color">Ahorras un <%= product.discount %>%</b></p>
           <% } else { %>
            <p class="color productDetail__main__section__div__precioUnico">$<%= product.price %></p>
           <% } %>
            <div class="productDetail__main__section_div_buttons">
                <button class="productDetail-button">COMPRAR AHORA</button>
               <button class="productDetail-button">AGREGAR AL CARRITO</button>
              <button class="productDetail-button productDetail-button-envios">Envios a domicilio  <i class="fa-solid fa-truck-fast" style="color: #000000;"></i></button> <br>
               <button type="submit" class="productDetail-button_a_p"><a href="/"><p>Ver mas</p></a></button><b>
            </div>
            </div>
        </div>
      
            <article  class="productDetail-descripcion">
                <h4 class="Descripción__detail">Descripción</h4>
                <h6 class="productDetail_descripcion-h6"><%= product.description %> </h6>
                <h6 class="productDetail_descripcion-h6"> <%= product.extraDescription %></h6>
                    <ul class="productDetail-li">
                   <li>Medidas:</li>     
                <li>Alto: <%= product.height %></li>
                 <li>Ancho: <%= product.width %></li> 
                <li>Profundidad: <%= product.depth %></li></b>
