<%- include("../partials/head.ejs") %>

<body class="products__body">

<%- include("../partials/header.ejs") %>

<main class="products__main">

<section class="products__main__section">
    <h1>Productos para: <%= categories.name %></h1>
    
    <% productsCategorized.forEach(product => { %>
        <article class="products__main__section__article">
            <a href="/products/detail/<%=product.dataValues.id %>" class="products__main__section__article__a">
                <img src="/img/<%= product.dataValues.image %>" alt="">
                <div class="products__main__section__div">
                    <h3><%= product.dataValues.name %></h3>
                    <% if (product.dataValues.discount > 0){ %>
                        <p class="tachado products__main__descuento-p">$<%= product.dataValues.price %></p>
                        <p class="products__main__descuento-p">-<%= product.dataValues.discount %>%</p>
                        <p>$<%= product.dataValues.price - ((product.dataValues.price * product.dataValues.discount) / 100) %></p>
                  <%  } else {%>
                    <p class="products__main__precio-total">$<%= product.dataValues.price %></p>
                    <% } %>
                </div>
            </a>
        </article>
    <%  }); %>
    
</section>

</main>


<%- include("../partials/footer.ejs") %>

</body>
</html>