
<%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>

    <main class="main_formEdit">
      </nav>
      <section class="edform_main_section">
        <h1>Editar Producto<i><%= product.name%></i></h1>
        <form action="/products/formEdit/<%= product.id %>?_method=PUT" method="post" class="edform_mainsection_form">
          
          <div>
            <label for="tel">Imagen</label><br>
            <input type="file" accept="png jpg">
          </div>
          <div>
            <label for="name">Nombre</label><br>
            <input type="text" name="nombre" id="name" value="<%= product.name %>" required>
          </div>

          <div>
            <label for="price">Precio</label><br>
            <input type="number" name="price" id="price" value="<%= product.price %>" required>
          </div>


          <div>
            <label for="description">Descripción</label><br>
            <input type="text" name="description" id="description" value="<%= product.description %>" required>
          </div>

          <div>
            <label for="descriptions a">Descripción Adicional</label><br>
            <input type="text" name="descriptions a" id="descriptions a" value="<%= product.extraDescription %>" required>
          </div>
          <h3>Medidas</h3>
          <div>
            <label for="height">Alto</label><br>
            <input type="text" name="height" id="height" required>
          </div>
          <div>
            <label for="width">Ancho</label><br>
            <input type="text" name="width" id="width" required>
          </div>
          <div>
            <label for="depth">Profundidad</label><br>
            <input type="text" name="depth" id="depth" required>
          </div>
        
        <article class="botones_ed_borrar">
          <button type="submit">Editar</button>
        </form>
        <form action="/products/delete/<%= product.id %>?_method=delete" method="post">
          <button type="submit">Borrar</button>
        </form>
        </article>


      </section>


      </main>
      <%- include("../partials/footer.ejs") %>

  </body>

  </html>